<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".DetailNemuActivity"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/found_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="20dp">

		<TextView
			android:id="@+id/tv_found_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Info Penemuan"
			android:layout_gravity="center"/>

		<Button
			android:id="@+id/btn_found"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Saya menemukannyya"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/found_info_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Nama"/>

			<TextView
				android:id="@+id/found_info_phone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Telepon"/>

			<Button
				android:id="@+id/btn_founder_call"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Telepon" />
		</LinearLayout>

	</LinearLayout>

	<ProgressBar
		android:id="@+id/pb_detail_nemu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"/>

	<TextView
		android:id="@+id/tv_nemu_fname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

	<TextView
		android:id="@+id/tv_nemu_subject"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

	<TextView
		android:id="@+id/tv_nemu_category"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

	<TextView
		android:id="@+id/tv_nemu_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

	<TextView
		android:id="@+id/tv_nemu_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

	<TextView
		android:id="@+id/tv_nemu_phone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

	<Button
		android:id="@+id/btn_call"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Telepon"/>

	<TextView
		android:id="@+id/tv_nemu_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

	<TextView
		android:id="@+id/tv_nemu_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="TextView" />

	<ImageView
		android:id="@+id/img_detail_nemu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:srcCompat="@drawable/lainnya" />


</LinearLayout>